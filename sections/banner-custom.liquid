{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "banner_subtitle",
      "label": "Banner Subtitle",
      "default": "Shop the latest products now"
    },
    {
      "type": "url",
      "id": "banner_button_link",
      "label": "Button Link",
      "default": "#"
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.banner_title }}</h1>
    <p>{{ section.settings.banner_subtitle }}</p>
    <a href="{{ section.settings.banner_button_link }}" class="banner-button">
      {{ section.settings.banner_button_text }}
    </a>
  </div>
</section>
