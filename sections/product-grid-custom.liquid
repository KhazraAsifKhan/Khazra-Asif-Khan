<div class="custom-grid">
  <div class="grid-wrapper">
    {% for i in (1..6) %}
  {% assign setting_id = "product_" | append: i %}
  {% assign product = all_products[section.settings[setting_id]] %}
  {% if product %}
    <div class="grid-item" data-handle="{{ product.handle }}">
      <div class="grid-img">
       <img src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" alt="{{ product.title }}">

      </div>
      <h3 class="grid-title">{{ product.title }}</h3>
      <p class="grid-price">{{ product.price | money }}</p>
    </div>
  {% endif %}
{% endfor %}

  </div>
</div>

<style>
  .custom-grid {
  padding: 40px 20px;
  width: 100%;
  max-width: 1337px; /* Figma total grid width */
  margin: 0 auto;
}

.grid-wrapper {
  display: grid;
  grid-template-columns: repeat(3, 169px); /* 3 items per row */
  gap: 30px; /* spacing between items */
  justify-content: center; /* center the grid */
}

.grid-item {
  position: relative;
  width: 169px;  
  height: 186.42px; /* exact Figma height */
  background: #fff;
  border-radius: 12px;
  text-align: center;
  cursor: pointer;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.grid-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}

/* Image */
.grid-img {
  width: 169px;       /* exact Figma width */
  height: 186.42px;   /* exact Figma height */
  position: relative;
}

.grid-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}

/* Plus Box */
.grid-item::after {
  content: '+';
  position: absolute;
  top: 18px;        
  left: 101.29px;   
  width: 15.71px;
  height: 15.71px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #000;
  font-size: 10px;
  font-weight: bold;
  background: #fff;
  cursor: pointer;
  z-index: 10;
}

/* Hide title & price */
.grid-title,
.grid-price {
  display: none;
}

/* Responsive: 2 items per row on small screens */
@media screen and (max-width: 900px) {
  .grid-wrapper {
    grid-template-columns: repeat(2, 169px); /* 2 items per row */
    gap: 20px;
    justify-content: center;
  }
}

@media screen and (max-width: 600px) {
  .grid-wrapper {
    grid-template-columns: repeat(1, 169px); /* 1 item per row on very small screens */
    gap: 15px;
    justify-content: center;
  }
}


/* ===== BACKDROP ===== */
.popup {
  position: fixed;
  inset: 0;
  {% comment %} background: rgba(0,0,0,0.6); %} {% endcomment %}
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  margin: 2%;
}

.popup.hidden { display: none; }

/* ===== POPUP BOX ===== */
.popup-content {
  background: #fff;
  width: 420px;
  padding: 20px;
  border-radius: 0;  /* sharp corners */
  position: relative;
  box-shadow: 0 8px 30px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
}

/* CLOSE BUTTON */
.popup-close {
  position: absolute;
  top: 12px;
  right: 12px;
  width: 12px;   /* figma width ~12px */
  height: 12px;  /* figma height ~12px */
  cursor: pointer;
  background: #f8f8f8e5;
  {% comment %} border: 1.5px solid #000; {% endcomment %}
}

.popup-close::before,
.popup-close::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 12px;
  height: 1.5px;
  background: #000;
  transform-origin: center;
}

.popup-close::before {
  transform: translate(-50%, -50%) rotate(45deg);
}
.popup-close::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}


/* TOP (Image + Details) */
.popup-top {
  display: flex;
  gap: 15px;
  align-items: stretch; /* make image match details height */
  margin-top: 5%; 
  
}

.popup-image img {
  width: 160px;
  height: 100%;
  object-fit: cover;
}
{% comment %} .popup-image img {
  position: absolute;  /* allow precise top/left */
  width: 120px;        /* exact width */
  height: 140px;       /* exact height */
  top: 36px;           /* distance from top of popup */
  left: 17px;          /* distance from left of popup */
  object-fit: cover;
} {% endcomment %}
.popup-details {
  flex: 1;
}

.popup-details h2 {
  font-size: 16px;
  margin: 0 0 8px;
}

#popup-price {
  font-weight: bold;
  margin: 0 0 8px;
}

.popup-details p {
  font-size: 13px;
  line-height: 1.4;
}

/* ===== BOTTOM ACTIONS ===== */
.popup-actions {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Color boxes */
.color-container {
  display: flex;
}

.color-box {
  flex: 1;
  display: flex;
  align-items: center;
  border: 1px solid #000;
  height: 40px;
  cursor: pointer;
  position: relative;
}

.color-box + .color-box {
  border-left: none; /* no double border */
}

.color-box::before {
  content: "";
  position: absolute;
  top: 0; left: 0;
  width: 8px;
  height: 100%;
  background: var(--square-color, grey);
}

.color-box span {
  flex: 1;
  text-align: center;
  font-size: 14px;
  z-index: 1;
}

.color-box.selected {
  background: black;
  color: white;
}

/* SIZE DROPDOWN */
#popup-variant {
  width: 100%;
  padding: 10px;
  border: 1px solid #000;
  font-size: 14px;
  background: #fff;
}

/* ADD TO CART */
#popup-add-to-cart {
  background: black;
  color: white;
  font-size: 17px;
  {% comment %} font-weight: bold; {% endcomment %}
  padding: 14px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40px;
}

#popup-add-to-cart .arrow {
  width: 34px;        /* from figma width: 33.7px */
  height: 0;          /* figma height: 0 */
  border-top: 1.5px solid #fff;   /* line itself */
  position: relative;
}

#popup-add-to-cart .arrow::after {
  content: "";
  position: absolute;
  right: 0;
  top: -6px;
  border-top: 1.5px solid #fff;
  border-right: 1.5px solid #fff;
  width: 10px;
  height: 10px;
  transform: rotate(45deg);
}





</style>



<script>
document.addEventListener("DOMContentLoaded", function() {
  const popup = document.getElementById("product-popup");
  const popupClose = document.querySelector(".popup-close");
  const popupTitle = document.getElementById("popup-title");
  const popupImage = document.getElementById("popup-image");
  const popupPrice = document.getElementById("popup-price");
  const popupDescription = document.getElementById("popup-description");
  const popupVariant = document.getElementById("popup-variant");
  const popupAddToCart = document.getElementById("popup-add-to-cart");
  const popupColors = document.getElementById("popup-colors");

  document.querySelectorAll(".grid-item").forEach(item => {
    item.addEventListener("click", function() {
      const handle = this.dataset.handle;

      fetch(`/products/${handle}.js`)
        .then(res => res.json())
        .then(product => {
          popupTitle.textContent = product.title;
          popupImage.src = product.images[0] || "";
          popupPrice.textContent = (product.price / 100).toLocaleString("en-US", { style: "currency", currency: "EUR" });
          popupDescription.textContent = product.description;

          // --- Populate sizes ---
          popupVariant.innerHTML = `<option value="">Choose your size</option>`;
          product.variants.forEach(v => {
            const opt = document.createElement("option");
            opt.value = v.id;
            opt.textContent = v.option1;
            popupVariant.appendChild(opt);
          });

          // --- Populate colors ---
          popupColors.innerHTML = "";
          const colors = [...new Set(product.variants.map(v => v.option2))]; // unique colors

       colors.forEach(color => {
  const box = document.createElement("div");
  box.className = "color-box";
  box.style.setProperty("--square-color", color.toLowerCase());

  const label = document.createElement("span");
  label.textContent = color;
  box.appendChild(label);

  box.addEventListener("click", () => {
    document.querySelectorAll(".color-box").forEach(b => b.classList.remove("selected"));
    box.classList.add("selected");

    // filter sizes
    popupVariant.innerHTML = `<option value="">Choose your size</option>`;
    product.variants
      .filter(v => v.option2 === color)
      .forEach(v => {
        const opt = document.createElement("option");
        opt.value = v.id;
        opt.textContent = v.option1;
        popupVariant.appendChild(opt);
      });
  });

  popupColors.appendChild(box);
});



          // auto-select first color
          {% comment %} if (popupColors.firstChild) popupColors.firstChild.click(); {% endcomment %}

          popup.classList.remove("hidden");
        });
    });
  });

  // Add to cart
  popupAddToCart.addEventListener("click", () => {
    const variantId = popupVariant.value;
    if(!variantId) return alert("Please select a size.");

    fetch("/cart/add.js", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ id: variantId, quantity: 1 })
    })
    .then(res => res.json())
    .then(data => {
      alert("Added to cart: " + data.title);
      popup.classList.add("hidden");
    })
    .catch(err => console.error(err));
  });

  // Close popup
  popupClose.addEventListener("click", () => popup.classList.add("hidden"));
  popup.addEventListener("click", e => { if(e.target === popup) popup.classList.add("hidden"); });
});
</script>


