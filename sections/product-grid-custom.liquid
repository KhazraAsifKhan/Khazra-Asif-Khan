<!-- POPUP -->
<div id="product-popup" class="popup hidden">
  <div class="popup-content">
    <span class="popup-close">&times;</span>
    
    <div class="popup-body">
      <!-- Left image -->
      <div class="popup-left">
        <img id="popup-image" src="" alt="">
      </div>

      <!-- Right content -->
      <div class="popup-right">
        <h2 id="popup-title">Tennis Blue T-Shirt</h2>
        <p id="popup-price" class="popup-price">980,00€</p>
        <p id="popup-description" class="popup-description">
          This one-piece swimsuit is crafted from jersey featuring 
          an allover micro Monogram motif in relief.
        </p>

        <!-- Color Options -->
        <div class="popup-colors">
          <label>Color</label>
          <div class="color-options">
            <button class="color-btn">Grey</button>
            <button class="color-btn">Black</button>
          </div>
        </div>

        <!-- Size Options -->
        <div class="popup-sizes">
          <label for="popup-size">Size</label>
          <select id="popup-size">
            <option>Choose your size</option>
            <option>Small</option>
            <option>Medium</option>
            <option>Large</option>
          </select>
        </div>

        <!-- Add to Cart Button -->
        <button id="popup-add-to-cart">
          ADD TO CART →
        </button>
      </div>
    </div>
  </div>
</div>

<style>
/* POPUP BACKDROP */
.popup {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.popup.hidden { display: none; }

/* POPUP BOX */
.popup-content {
  background: #fff;
  padding: 25px;
  border-radius: 0;
  max-width: 700px;
  width: 100%;
  position: relative;
}

/* CLOSE BUTTON */
.popup-close {
  position: absolute;
  top: 15px; right: 15px;
  font-size: 24px;
  cursor: pointer;
}

/* POPUP BODY LAYOUT */
.popup-body {
  display: flex;
  gap: 20px;
}
.popup-left {
  flex: 1;
}
.popup-left img {
  width: 100%;
  height: auto;
  border-radius: 4px;
}
.popup-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12px;
  text-align: left;
}

/* TITLE + PRICE */
.popup-right h2 {
  font-size: 20px;
  margin: 0;
}
.popup-price {
  font-size: 18px;
  font-weight: 500;
}
.popup-description {
  font-size: 14px;
  color: #555;
  line-height: 1.4;
}

/* COLOR BUTTONS */
.color-options {
  display: flex;
  gap: 8px;
}
.color-btn {
  flex: 1;
  border: 1px solid #000;
  padding: 10px;
  background: #fff;
  cursor: pointer;
  font-size: 14px;
}
.color-btn:hover {
  background: #f5f5f5;
}

/* SIZE DROPDOWN */
#popup-size {
  width: 100%;
  padding: 10px;
  border: 1px solid #000;
  font-size: 14px;
  cursor: pointer;
}

/* ADD TO CART BUTTON */
#popup-add-to-cart {
  width: 100%;
  padding: 14px;
  background: #000;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  margin-top: 10px;
}
#popup-add-to-cart:hover {
  background: #222;
}

/* RESPONSIVE */
@media(max-width: 700px) {
  .popup-body {
    flex-direction: column;
  }
  .popup-left, .popup-right {
    width: 100%;
  }
}
</style>



<script>
document.addEventListener("DOMContentLoaded", function() {
  const popup = document.getElementById("product-popup");
  const popupClose = document.querySelector(".popup-close");
  const popupTitle = document.getElementById("popup-title");
  const popupImage = document.getElementById("popup-image");
  const popupPrice = document.getElementById("popup-price");
  const popupDescription = document.getElementById("popup-description");
  const popupVariant = document.getElementById("popup-variant");
  const popupAddToCart = document.getElementById("popup-add-to-cart");

  // Handle grid item click
  document.querySelectorAll(".grid-item").forEach(item => {
    item.addEventListener("click", function() {
      const handle = this.getAttribute("data-handle");

      // Fetch product JSON by handle
      fetch(`/products/${handle}.js`)
        .then(res => res.json())
        .then(product => {
          popupTitle.textContent = product.title;
          popupImage.src = product.images[0] || "";
          popupPrice.textContent = (product.price / 100).toLocaleString("en-US", {
            style: "currency",
            currency: "USD"
          });
          popupDescription.textContent = product.description;

          // Populate variants
          popupVariant.innerHTML = "";
          product.variants.forEach(variant => {
            let option = document.createElement("option");
            option.value = variant.id;
            option.textContent = variant.title + " - " + (variant.price / 100).toLocaleString("en-US", {
              style: "currency",
              currency: "USD"
            });
            popupVariant.appendChild(option);
          });

          popup.classList.remove("hidden");

          // Add to Cart
          popupAddToCart.onclick = function() {
            const variantId = popupVariant.value;
            fetch("/cart/add.js", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ id: variantId, quantity: 1 })
            })
              .then(res => res.json())
              .then(data => {
                alert("Added to cart: " + data.title);
                popup.classList.add("hidden");
              })
              .catch(err => console.error(err));
          };
        });
    });
  });

  // Close popup
  popupClose.addEventListener("click", () => popup.classList.add("hidden"));
  popup.addEventListener("click", e => {
    if (e.target === popup) popup.classList.add("hidden");
  });
});
</script>


