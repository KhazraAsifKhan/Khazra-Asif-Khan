<!-- POPUP -->
<div id="product-popup" class="popup hidden">
  <div class="popup-content">
    <!-- Before -->
<!-- <span class="popup-close">&times;</span> -->

<!-- After -->
<span class="popup-close"></span>

    
    <!-- Top: Image + Details -->
    <div class="popup-top">
      <div class="popup-image">
        <img id="popup-image" src="https://via.placeholder.com/200x250" alt="">
      </div>

      <div class="popup-details">
        <h2 id="popup-title">Tennis Blue T-Shirt</h2>
        <p id="popup-price">980,00€</p>
        <p id="popup-description">
          This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.
        </p>
      </div>
    </div>

    <!-- Bottom: Colors + Size + Button -->
    <div class="popup-actions">
      <label>Color</label>
      <div id="popup-colors" class="color-container">
        <div class="color-box" style="--square-color: grey;"><span>Grey</span></div>
        <div class="color-box" style="--square-color: black;"><span>Black</span></div>
      </div>

      <label>Size</label>
      <select id="popup-variant">
        <option value="">Choose your size</option>
        <option>S</option>
        <option>M</option>
        <option>L</option>
      </select>

      <button id="popup-add-to-cart">ADD TO CART <span class="arrow"></span></button>
    </div>
  </div>
</div>




<div class="custom-grid">
  <div class="grid-wrapper">
    {% for i in (1..6) %}
  {% assign setting_id = "product_" | append: i %}
  {% assign product = all_products[section.settings[setting_id]] %}
  {% if product %}
    <div class="grid-item" data-handle="{{ product.handle }}">
      <div class="grid-img">
       <img src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" alt="{{ product.title }}">

      </div>
      <h3 class="grid-title">{{ product.title }}</h3>
      <p class="grid-price">{{ product.price | money }}</p>
    </div>
  {% endif %}
{% endfor %}

  </div>
</div>

<style>
.custom-grid {
  padding: 40px 20px;
}
.grid-wrapper {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}
.grid-item {
  background: #fff;
  border-radius: 12px;
  padding: 15px;
  text-align: center;
  cursor: pointer;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.grid-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}
.grid-img img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  object-fit: cover;   /* makes sure images don’t stretch weirdly */
  max-height: 250px;   /* keep them from being too tall */
}

.grid-title {
  font-size: 1rem;
  margin: 10px 0 5px;
}
.grid-price {
  font-size: 0.9rem;
  color: #555;
}


/* Responsive */
@media screen and (max-width: 900px) {
  .grid-wrapper {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media screen and (max-width: 600px) {
  .grid-wrapper {
    grid-template-columns: 1fr;
  }
}


/* ===== BACKDROP ===== */
.popup {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.popup.hidden { display: none; }

/* ===== POPUP BOX ===== */
.popup-content {
  width: 311px;
  height: 447px;
  background: #fff;
  box-shadow: 0px 2px 4px 0px #00000033;
  border-radius: 0; /* sharp corners as per figma */
  padding: 20px;
  position: relative;
  display: flex;
  flex-direction: column;
}


/* CLOSE BUTTON */
.popup-close {
  position: absolute;
  top: 12px;
  right: 12px;
  width: 12px;   /* figma width ~12px */
  height: 12px;  /* figma height ~12px */
  cursor: pointer;
  background: #f8f8f8e5;
  {% comment %} border: 1.5px solid #000; {% endcomment %}
}

.popup-close::before,
.popup-close::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  width: 12px;
  height: 1.5px;
  background: #000;
  transform-origin: center;
}

.popup-close::before {
  transform: translate(-50%, -50%) rotate(45deg);
}
.popup-close::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}


/* TOP (Image + Details) */
.popup-top {
  display: flex;
  gap: 10px;
  align-items: flex-start;
}

.popup-image img {
  width: 120px;
  height: 140px;
  object-fit: cover;  /* keeps proportions clean */
  margin-top: 36px;   /* from figma top: 36.42px */
  margin-left: 17px;  /* from figma left: 17px */
}


.popup-details {
  width: 136px;
  height: 38px;
  margin-top: 39px;   /* from figma top: 39px */
  margin-left: 145px; /* from figma left: 145px */
  font-family: 'Jost', sans-serif;
  font-weight: 300;   /* light */
  font-size: 16px;
  line-height: 120%;  /* matches figma */
  letter-spacing: 0;
  color: #000;
}

.popup-details h2 {
  font-size: 16px;
  margin: 0 0 8px;
}

#popup-price {
  font-weight: bold;
  margin: 0 0 8px;
}

.popup-details p {
  font-size: 13px;
  line-height: 1.4;
}

/* ===== BOTTOM ACTIONS ===== */
.popup-actions {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Color boxes */
.color-container {
  display: flex;
}

.color-box {
  flex: 1;
  display: flex;
  align-items: center;
  border: 1px solid #000;
  height: 40px;
  cursor: pointer;
  position: relative;
}

.color-box + .color-box {
  border-left: none; /* no double border */
}

.color-box::before {
  content: "";
  position: absolute;
  top: 0; left: 0;
  width: 8px;
  height: 100%;
  background: var(--square-color, grey);
}

.color-box span {
  flex: 1;
  text-align: center;
  font-size: 14px;
  z-index: 1;
}

.color-box.selected {
  background: black;
  color: white;
}

/* SIZE DROPDOWN */
#popup-variant {
  width: 100%;
  padding: 10px;
  border: 1px solid #000;
  font-size: 14px;
  background: #fff;
}

/* ADD TO CART */
#popup-add-to-cart {
  background: black;
  color: white;
  font-size: 17px;
  {% comment %} font-weight: bold; {% endcomment %}
  padding: 14px;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40px;
}

#popup-add-to-cart .arrow {
  width: 34px;        /* from figma width: 33.7px */
  height: 0;          /* figma height: 0 */
  border-top: 1.5px solid #fff;   /* line itself */
  position: relative;
}

#popup-add-to-cart .arrow::after {
  content: "";
  position: absolute;
  right: 0;
  top: -6px;
  border-top: 1.5px solid #fff;
  border-right: 1.5px solid #fff;
  width: 10px;
  height: 10px;
  transform: rotate(45deg);
}





</style>



<script>
document.addEventListener("DOMContentLoaded", function() {
  const popup = document.getElementById("product-popup");
  const popupClose = document.querySelector(".popup-close");
  const popupTitle = document.getElementById("popup-title");
  const popupImage = document.getElementById("popup-image");
  const popupPrice = document.getElementById("popup-price");
  const popupDescription = document.getElementById("popup-description");
  const popupVariant = document.getElementById("popup-variant");
  const popupAddToCart = document.getElementById("popup-add-to-cart");
  const popupColors = document.getElementById("popup-colors");

  document.querySelectorAll(".grid-item").forEach(item => {
    item.addEventListener("click", function() {
      const handle = this.dataset.handle;

      fetch(`/products/${handle}.js`)
        .then(res => res.json())
        .then(product => {
          popupTitle.textContent = product.title;
          popupImage.src = product.images[0] || "";
          popupPrice.textContent = (product.price / 100).toLocaleString("en-US", { style: "currency", currency: "EUR" });
          popupDescription.textContent = product.description;

          // --- Populate sizes ---
          popupVariant.innerHTML = `<option value="">Choose your size</option>`;
          product.variants.forEach(v => {
            const opt = document.createElement("option");
            opt.value = v.id;
            opt.textContent = v.option1;
            popupVariant.appendChild(opt);
          });

          // --- Populate colors ---
          popupColors.innerHTML = "";
          const colors = [...new Set(product.variants.map(v => v.option2))]; // unique colors

       colors.forEach(color => {
  const box = document.createElement("div");
  box.className = "color-box";
  box.style.setProperty("--square-color", color.toLowerCase());

  const label = document.createElement("span");
  label.textContent = color;
  box.appendChild(label);

  box.addEventListener("click", () => {
    document.querySelectorAll(".color-box").forEach(b => b.classList.remove("selected"));
    box.classList.add("selected");

    // filter sizes
    popupVariant.innerHTML = `<option value="">Choose your size</option>`;
    product.variants
      .filter(v => v.option2 === color)
      .forEach(v => {
        const opt = document.createElement("option");
        opt.value = v.id;
        opt.textContent = v.option1;
        popupVariant.appendChild(opt);
      });
  });

  popupColors.appendChild(box);
});



          // auto-select first color
          {% comment %} if (popupColors.firstChild) popupColors.firstChild.click(); {% endcomment %}

          popup.classList.remove("hidden");
        });
    });
  });

  // Add to cart
  popupAddToCart.addEventListener("click", () => {
    const variantId = popupVariant.value;
    if(!variantId) return alert("Please select a size.");

    fetch("/cart/add.js", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ id: variantId, quantity: 1 })
    })
    .then(res => res.json())
    .then(data => {
      alert("Added to cart: " + data.title);
      popup.classList.add("hidden");
    })
    .catch(err => console.error(err));
  });

  // Close popup
  popupClose.addEventListener("click", () => popup.classList.add("hidden"));
  popup.addEventListener("click", e => { if(e.target === popup) popup.classList.add("hidden"); });
});
</script>


